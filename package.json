{
  "name": "kak-mode",
  "main": "./lib/kak-mode",
  "version": "1.9.0",
  "description": "Kakoune emulator",
  "keywords": [],
  "repository": "https://github.com/adekbadek/atom-kak-mode",
  "license": "MIT",
  "scripts": {
    "cm": "git-cz",
    "semantic-release": "semantic-release",
    "docs:build": "node docs/generate.js",
    "docs:dev-watch": "nodemon --watch lib --watch docs/*.pug docs/generate.js",
    "docs:dev-serve": "cd docs && reload -b",
    "docs:dev": "concurrently npm:docs:dev-*",
    "format": "prettier-standard"
  },
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "atomTestRunner": "./spec/custom-runner",
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/apm": "^1.0.0",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "atom-jasmine3-test-runner": "^4.1.1",
    "commitizen": "^3.0.5",
    "concurrently": "^4.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "documentation": "^9.0.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "markdown-it": "^8.4.2",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "prettier-standard": "^8.0.1",
    "pug": "^2.0.3",
    "reload": "^2.4.0",
    "semantic-release": "^15.13.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
